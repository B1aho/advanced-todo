        "vanillajs-datepicker": "^1.3.4",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.0"
    },
    "dependencies": {
        "date-fns": "^4.1.0"
    }
